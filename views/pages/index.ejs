<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>
<body>
  <header>
    <% include ../partials/header %>
  </header>
  <main>
    <div class="section-signup">
      <div class="index_container">
        <form class="form-horizontal login-form" action="/Sign_In" method="POST">
          <div class="form-group">
            <label for="inputID" class="col-sm-2 control-label white">ID</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="memberID" placeholder="User ID" />
          </div>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label white">Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" name="memberPassword" placeholder="Password" />
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input class="btn btn-success" type="submit" value="Sign In" />
              <input class="btn btn-primary" type="button" value="Sign Up" data-toggle="modal" data-target="#signup_modal" />
            </div>
          </div>
        </form>
      </div>
    </div>
    </main>
  </div>
</body>
</html>
